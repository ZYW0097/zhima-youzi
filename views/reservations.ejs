<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>查看訂位</title>
    <link rel="stylesheet" href="css/view.css">
</head>
<body>
    <h1>訂位列表</h1>

    <div class="reservations-container">
        <% if (reservations.length === 0) { %>
            <p>目前沒有任何訂位。</p>
        <% } else { %>
            <% reservations.reverse().forEach(reservation => { %>
                <div class="reservation-card">
                    <p><strong>名稱:</strong> <%= reservation.name %> <%= reservation.gender %></p>
                    <p><strong>電話:</strong> <%= reservation.phone.replace(/(\d{4})(\d{3})(\d{3})/, '$1-$2-$3') %></p>
                    <p><strong>電子郵件:</strong> <%= reservation.email %></p>
                    <p>
                        <strong>日期:</strong> <%= new Date(reservation.date).toLocaleDateString('zh-TW', { timeZone: 'Asia/Taipei' }) %>
                        (<%= ['日', '一', '二', '三', '四', '五', '六'][new Date(reservation.date).getDay()] %>)
                    </p>
                    <p><strong>時間:</strong> <%= reservation.time %></p>
                    <p><strong>成人數量:</strong> <%= reservation.adults %></p>
                    <p><strong>小孩數量:</strong> <%= reservation.children || 0 %></p>
                    <p><strong>素食選項:</strong> <%= reservation.vegetarian %></p>
                    <p><strong>特殊需求:</strong> <%= reservation.specialNeeds || '無' %></p>
                    <p><strong>備註:</strong> <%= reservation.notes || '無' %></p>
                </div>
            <% }); %>
        <% } %>
    </div>
</body>
</html>
